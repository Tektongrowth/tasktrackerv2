# ===========================================
# TASK TRACKER - ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and fill in your values

# Database (Railway/Render provide this automatically)
DATABASE_URL="postgresql://user:password@localhost:5432/task_tracker"

# ===========================================
# AUTHENTICATION
# ===========================================

# Google OAuth - Create at https://console.cloud.google.com
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Session Security (REQUIRED in production)
# Generate with: openssl rand -hex 32
SESSION_SECRET="your-session-secret-change-this"

# ===========================================
# STRIPE (for subscription management)
# ===========================================
STRIPE_API_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Stripe Price IDs - Map your Stripe prices to plan types
# Get these from Stripe Dashboard > Products > [Product] > Pricing
# When a customer subscribes to a price, a client and project are auto-created
# Only configure the plan types you use - leave others commented out
STRIPE_PRICE_PACKAGE_ONE="price_xxx"      # Entry-level plan
STRIPE_PRICE_PACKAGE_TWO="price_xxx"      # Mid-tier plan
STRIPE_PRICE_PACKAGE_THREE="price_xxx"    # Professional plan
STRIPE_PRICE_PACKAGE_FOUR="price_xxx"     # Premium plan
# STRIPE_PRICE_FACEBOOK_ADS="price_xxx"   # Facebook Ads add-on
# STRIPE_PRICE_CUSTOM_WEBSITE="price_xxx" # Custom Website add-on

# ===========================================
# EMAIL (Resend)
# ===========================================
RESEND_API_KEY="re_..."

# Email sender (must be verified domain in Resend)
EMAIL_FROM="Task Tracker <tasks@yourdomain.com>"

# Admin notification email
ADMIN_EMAIL="admin@yourdomain.com"

# Admin users (comma-separated emails that get admin role)
ADMIN_EMAILS="admin@yourdomain.com"

# ===========================================
# APP CONFIGURATION
# ===========================================

# Base URL for the application (used for emails, redirects)
APP_URL="http://localhost:3001"

# Frontend URL (for development with Vite)
CLIENT_URL="http://localhost:5173"

# CORS Origins (comma-separated for multiple domains in production)
# Example: "https://yourdomain.com,https://www.yourdomain.com"
# CORS_ORIGINS="https://yourdomain.com"

# ===========================================
# SECURITY CONFIGURATION
# ===========================================

# Frame Ancestors (for embedding in iframes)
# Use 'self' for same-origin only, or specify allowed domains
# Example: "'self' https://app.gohighlevel.com"
# FRAME_ANCESTORS="'self'"

# ===========================================
# SERVER
# ===========================================
NODE_ENV="development"
PORT=3001
